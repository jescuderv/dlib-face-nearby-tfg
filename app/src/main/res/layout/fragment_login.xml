<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.fragment.LoginFragment">

    <EditText
        android:id="@+id/login_email_input"
        style="@style/InputBoxText"
        android:layout_width="match_parent"
        android:layout_above="@+id/login_password_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/separation_margin_2"
        android:layout_marginEnd="@dimen/default_layout_margin"
        android:layout_marginStart="@dimen/default_layout_margin"
        android:hint="@string/login_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/login_password_input"
        style="@style/InputBoxText"
        android:layout_width="match_parent"
        android:layout_above="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/separation_margin_4"
        android:layout_marginEnd="@dimen/default_layout_margin"
        android:layout_marginStart="@dimen/default_layout_margin"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/login_button"
        style="@style/DefaultButton"
        android:layout_width="match_parent"
        android:layout_above="@+id/login_register_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/separation_margin_2"
        android:layout_marginEnd="@dimen/default_layout_margin"
        android:layout_marginStart="@dimen/default_layout_margin"
        android:background="@drawable/button_round_white"
        android:text="@string/login_login"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/login_register_button"
        style="@style/TextButton"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/separation_margin_6"
        android:layout_marginEnd="@dimen/default_layout_margin"
        android:layout_marginStart="@dimen/default_layout_margin"
        android:text="@string/login_sign_up"
        android:textColor="@color/white" />
</RelativeLayout>
